type Mutation {
    addProduct( productDto: ProductDto): Product
    updateProduct(idProduct:String, productDto:ProductDto): Product
    deleteProduct(idProduct:String): String
}

type Query{
    getProducts: [Product]
    getProductById(idProduct:String): Product
    checkProductInStock(orderLineDtos :[OrderLineDto]) : Boolean
}


type Product{
     idProduct : String,
     name : String,
     category : String,
     price : Float,
     quantity : Int
}

input ProductDto{
    name : String,
    category : String,
    price : Float,
    quantity : Int
}

input OrderLineDto{
    idOrderLine : String,
    idProduct : String,
    quantity : Int,
    idOrder : String
}
